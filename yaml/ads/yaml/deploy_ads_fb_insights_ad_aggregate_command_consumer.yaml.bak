apiVersion: apps/v1
kind: Deployment
metadata:
  name: ads-fb-insights-ad-aggregate-command-consumer-deployment
  labels:
    app: ads-fb-insights-ad-aggregate-command-consumer
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ads-fb-insights-ad-aggregate-command-consumer
  template:
    metadata:
      labels:
        app: ads-fb-insights-ad-aggregate-command-consumer
    spec:
      containers:
        - name: ads
          image: {image}
          imagePullPolicy: Always
          command: ["/bin/sh", "-c"]
          args: ["cd $ADS_AUTOMATION_HOME; sh prepare_env.sh && python3.8 -u ads_fb_insights_ad_aggregate_command_consumer.py"]
          resources:
           requests:
             memory: 70Mi
             cpu: 80m
           limits:
             memory: 1Gi
             cpu: 500m
          envFrom:
            - configMapRef:
                name: mobio-config
          volumeMounts:
            - name: mobio-shared-data
              mountPath: /media/data/resources/
      imagePullSecrets:
        - name: registrypullsecret
      volumes:
        - name: mobio-shared-data
          persistentVolumeClaim:
            claimName: mobio-resources-pvc